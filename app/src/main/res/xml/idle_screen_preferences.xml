<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        android:inputType="number"
        app:defaultValue="@integer/back_to_idle_time"
        app:key="back_to_idle_time"
        app:title="사용자 입력 없을 시 대기화면 전환 시간 초"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        android:inputType="number"
        app:defaultValue="@integer/idle_screen_image_duration"
        app:key="idle_screen_image_duration"
        app:title="대기화면 이미지 전환 시간 초"
        app:useSimpleSummaryProvider="true" />

    <SwitchPreference
        app:defaultValue="@bool/use_idle_screen"
        app:key="use_idle_screen"
        app:summaryOff="대기화면을 사용하지 않습니다."
        app:summaryOn="대기화면을 사용합니다."
        app:title="대기화면 사용" />

