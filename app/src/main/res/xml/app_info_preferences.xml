<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
        app:defaultValue="@bool/auto_update"
        app:key="auto_update"
        app:summaryOff="업데이트 확인 안 함"
        app:summaryOn="업데이트 확인 함"
        app:title="업데이트 알림 받기" />
    <Preference
        app:key="launch_update"
        app:title="앱 업데이트" />

    <Preference
        app:defaultValue=""
        app:key="version_name"
        app:title="앱 버전"
        app:useSimpleSummaryProvider="true"
        android:enabled="true"/>

</PreferenceScreen>