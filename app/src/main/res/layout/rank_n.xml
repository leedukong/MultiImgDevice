<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rank_n"
    android:layout_width="450dp"
    android:layout_height="85dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/bg_rank_n">

    <TextView
        android:id="@+id/rank_n_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:fontFamily="@font/nanum_gothic_extrabold"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rank_n_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/nanum_gothic_extrabold"
        android:text="아메리카노"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rank_n_ratio"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/rank_n_ratio"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="5dp"
        android:progress="50"
        android:progressDrawable="@drawable/statistics_rank_n_progress_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rank_n_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rank_n_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nanum_gothic_extrabold"
        android:text="₩655,200"
        android:textAlignment="viewStart"
        android:textColor="#bbffffff"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/rank_n_ratio"
        app:layout_constraintTop_toBottomOf="@+id/rank_n_ratio" />

    <TextView
        android:id="@+id/rank_n_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_gothic_extrabold"
        android:text="43%"
        android:textAlignment="viewStart"
        android:textColor="#bbffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/rank_n_ratio"
        app:layout_constraintTop_toTopOf="@+id/rank_n_revenue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/rank_n_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_gothic_extrabold"
            android:text="52"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanum_gothic_extrabold"
            android:text="잔"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>