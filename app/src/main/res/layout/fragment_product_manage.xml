<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminSettings.ProductManage.DessertProductManageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/categoryLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <ListView
                android:id="@+id/productCategoryList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:listSelector="@color/maize_crayola" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addCategoryButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="+"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/removeCategoryButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="-"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/productLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:visibility="gone">

            <ListView
                android:id="@+id/productList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addProductButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/maize_crayola"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="+"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/removeProductButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/maize_crayola"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="-"
                    android:textSize="24sp"
                    app:cornerRadius="0dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="카테고리명"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/category_name"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:inputType="text"
                    android:text=""
                    android:textSize="14sp" />

            </LinearLayout>

            <Switch
                android:id="@+id/category_available"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="판매 여부"
                android:textAlignment="viewStart"
                android:textOff="숨김"
                android:textOn="판매" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_category_index"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="표시 순서"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/category_index"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:inputType="number"
                    android:maxLength="1"
                    android:text=""
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_category_image"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="이미지"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_category_image"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:text="이미지 선택" />

            </LinearLayout>

            <ImageView
                android:id="@+id/category_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:tag="@drawable/coffee"
                app:srcCompat="@drawable/coffee" />

            <Button
                android:id="@+id/btn_category_save"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="저장" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/product_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@android:drawable/divider_horizontal_bright"
            android:orientation="vertical"
            android:showDividers="middle|beginning|end"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:divider="@android:drawable/divider_horizontal_dark"
                android:orientation="horizontal"
                android:showDividers="middle|beginning|end">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/text_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="제품명"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="text"
                        android:text="Name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F0F0F0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/text_product_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="카테고리"
                        android:textAlignment="center" />

                    <Spinner
                        android:id="@+id/product_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/text_product_index"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="표시 순서"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/product_index"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/switchLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F0F0F0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/switchTxt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="판매 여부" />

                    <Switch
                        android:id="@+id/product_available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="3dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/switchLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/switchTxt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="통신" />

                    <ImageView
                        android:id="@+id/product_serial_state"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_led_off" />

                </LinearLayout>

            </LinearLayout>

            <ScrollView
                android:id="@+id/product_setting_scrollview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="40dp">

                        <TextView
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nanum_gothic_extrabold"
                            android:gravity="center_vertical"
                            android:text="판매 가격"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/dessert_price"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:gravity="center"
                            android:inputType="number" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="원"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="40dp">

                        <TextView
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nanum_gothic_extrabold"
                            android:gravity="center_vertical"
                            android:text="판매 개수"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/dessert_total_count"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:gravity="center"
                            android:inputType="number" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="개"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="40dp">

                        <TextView
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nanum_gothic_extrabold"
                            android:gravity="center_vertical"
                            android:text="멀티 자판기 번호"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/dessert_number"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:gravity="center"
                            android:inputType="number" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="번"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                    </Space>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="40dp">

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="80dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fillViewport="true"
                            android:scrollbars="none">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/recipe_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                    </androidx.recyclerview.widget.RecyclerView>

                                    <Space
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0" />

                                </LinearLayout>

                            </RelativeLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center|right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_image_set"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:text="제품 이미지 설정" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_product_save"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:text="저장" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>